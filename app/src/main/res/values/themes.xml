<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Ludere" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorSecondary">@android:color/white</item>
        <item name="colorSecondaryVariant">@android:color/white</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Theme.Ludere.Game" parent="Theme.Ludere">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="Theme.Ludere.Settings" parent="Theme.Ludere">
        <item name="android:windowBackground">@color/settings_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>